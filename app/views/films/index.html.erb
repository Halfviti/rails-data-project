<h1>Films</h1>

<div class="d-grid grid-l">
    <% @films.each do |film| %>
        <article class="card d-col-flex">
            <div class="card-body">
                <h5 class="card-title"><%= link_to "Episode #{film.episode_id}: #{film.title}", film %></h5>
            </div>
        </article>
    <% end %>
</div>
