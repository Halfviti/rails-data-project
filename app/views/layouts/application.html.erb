<!DOCTYPE html>
<html>
  <head>
    <title>RailsDataProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg main-nav">
      <%= link_to "Star Wars Rails App", root_path, class: "navbar-brand" %>
      <button class ="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li>
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Films", films_path, class: "nav-link" %> 
          </li>
          <li class="nav-item">
            <%= link_to "Characters", characters_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Planets", planets_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Species", species_index_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
        </ul>
        <%= form_tag(search_path, method: "get", class: "form-inline") do %>
        <%= text_field_tag(:query, "", class: "form-control", placeholder: "Search Characters") %>
        <%= submit_tag("Search", class: "btn btn-outline-warning mx-1") %>
      <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
