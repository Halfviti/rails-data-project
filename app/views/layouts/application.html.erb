<!DOCTYPE html>
<html>
  <head>
    <title>RailsDataProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg main-nav">
      <a class="navbar-brand" href="/">Star Wars Rails App</a>
      <button class ="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/films">Films</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/characters">Characters</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/planets">Planets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/species">Species</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
        <%= form_tag(search_path, method: "get", class: "form-inline") do %>
        <%= text_field_tag(:query, "", class: "form-control", placeholder: "Search Characters") %>
        <%= submit_tag("Search", class: "btn btn-outline-warning mx-1") %>
      <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
